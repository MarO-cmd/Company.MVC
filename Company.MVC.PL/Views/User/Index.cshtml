@model List<UserViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Users</h1>
<br />
<br />

<form asp-action="Index" class="m-5">

    <div class="row">
        <div class="col-8">
            <input name="InputSearch" id="InputSearch" placeholder="Search By Email..." class="form-control" />

        </div>

        <div class="col-4">
            <input type="submit" class="btn btn-success" />

        </div>
    </div>


</form>




@if (Model.Any())
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
<th>@Html.DisplayNameFor(model => model[0].Id)</th> <!-- Access first item's properties -->
<th>@Html.DisplayNameFor(model => model[0].FirstName)</th>
<th>@Html.DisplayNameFor(model => model[0].LastName)</th>
<th>@Html.DisplayNameFor(model => model[0].Email)</th>
<th>@Html.DisplayNameFor(model => model[0].Roles)</th>

                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>


                    <td>@user.Id</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>@string.Join(" ", user.Roles)</td>

                    <partial name="_ButtonsPartialView" model="user.Id" />



                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-danger">
        <h4>There are no Employees</h4>
    </div>
}


